<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:PleaseApp.Views"
       xmlns:main="clr-namespace:PleaseApp"
       x:Class="PleaseApp.AppShell">

    <!-- Flyout structure for better navigation -->
    <FlyoutItem Title="Dashboard">
        <ShellContent Title="Dashboard" ContentTemplate="{DataTemplate main:MainPage}" Route="MainPage" />
    </FlyoutItem>
    <FlyoutItem Title="Meal Tracker">
        <ShellContent Title="Meal Tracker" ContentTemplate="{DataTemplate views:MealView}" Route="MealView" />
    </FlyoutItem>
</Shell>
